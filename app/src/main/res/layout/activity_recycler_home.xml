<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotocondensed_regular"
                android:textSize="15dp"
                android:id="@+id/list_type"
                android:text="TEST"
                android:textFontWeight="500"
                android:textColor="@color/grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotocondensed_bold"
                android:textSize="40dp"
                android:text="Rp. "
                android:textColor="@color/black"
                android:textFontWeight="500"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="96dp"
                android:layout_height="5dp"
                android:id="@+id/dividerbar1"
                android:background="@android:color/black"/>
            <View
                android:layout_width="95dp"
                android:layout_height="5dp"
                android:id="@+id/dividerbar2"
                android:background="@android:color/black"/>
            <View
                android:layout_width="95dp"
                android:layout_height="5dp"
                android:id="@+id/dividerbar3"
                android:background="@android:color/black"/>
            <View
                android:layout_width="96dp"
                android:layout_height="5dp"
                android:id="@+id/dividerbar4"
                android:background="@android:color/black"/>
        </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sneakPeekList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/openIncomeDetailActivity"
                android:text="SHOW MORE"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textFontWeight="500" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>